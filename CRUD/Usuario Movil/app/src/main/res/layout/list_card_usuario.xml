<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/cardView"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginHorizontal="16dp"
android:layout_marginTop="8dp"
android:clickable="true"
app:cardCornerRadius="18dp"
app:cardBackgroundColor="@color/cardview_dark_background"
app:cardElevation="4dp"
app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="248dp"
        android:background="@color/white"
        android:padding="16dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentStart="true"
           />

        <TextView
            android:id="@+id/card_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/imageView"
            android:text="DescripciÃ³n: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_descripcion"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/imageView"
            android:text="Fecha: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/card_edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_fecha"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/imageView"
            android:text="Edad:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/card_correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_edad"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/imageView"
            android:text="Correo:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/card_activo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_correo"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/imageView"
            android:text="Activo:"
            android:textSize="14sp" />




        <Button
            android:id="@+id/card_button_eliminar"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_correo"
            android:layout_marginStart="-99dp"
            android:layout_marginTop="69dp"
            android:layout_toEndOf="@id/imageView"
            android:text="Eliminar"
            android:textSize="14sp" />

        <Button
            android:id="@+id/card_editar"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_correo"
            android:layout_marginStart="105dp"
            android:layout_marginTop="68dp"
            android:layout_toEndOf="@id/imageView"
            android:text="Editar"
            android:textSize="14sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
